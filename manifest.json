{
    "manifest_version": 2,
    "name": "Mute all inactive tabs",
    "version": "0.3",

    "description": "Automatically mutes all inactive tabs.\nManually unmuted tabs (right click on a tab and select \"Unmute Tab\") won't be muted, even when inactive.",

    "homepage_url": "https://github.com/evilpie/mute-all-inactive-tabs",

    "icons": {
        "64": "icons/icon-64.png"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "mute-all-inactive-tabs@evilpie.tomschuster.name"
      }
    },

    "background": {
      "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icons/icon-64.png"
    }
}
